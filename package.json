{
  "name": "boilerplate",
  "version": "1.0.0",
  "author": "Edd Tidbury",
  "description": "Boilerplate using React, Browserify, SASS, Gulp, and a FTP Sync NPM for simple deployment.",
  "repository": {
    "type": "git",
    "url": "https://github.com/etidbury/boilerplate.git"
  },
  "keywords": [
    "gulp",
    "browserify",
    "react",
    "sass",
    "boilerplate",
    "deploy"
  ],
  "devDependencies": {
      "gulp-blue":"1.0.6"
  },
  "scripts": {
    "lint": "./node_modules/.bin/cross-env NODE_ENV=test ./.bin/gulp lint",
    "test": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/gulp test",
    "build": "./node_modules/.bin/cross-env NODE_ENV=production ./node_modules/.bin/gulp prod",
    "start": "./node_modules/.bin/cross-env NODE_ENV=development ./node_modules/.bin/gulp dev",
    "dev": "./node_modules/.bin/cross-env NODE_ENV=development node ./node_modules/gulp-blue/ dev",

    "dev-deploy": "NODE_ENV=development node ./deploy/",
    "deploy": "npm run build && NODE_ENV=production node ./deploy/"
  }
}
